{% extends 'app.twig' %}
{% block content %}
    <div class="container">
        <div class="card text-center">
            <div class="card-header">
                <ul class="nav nav-pills card-header-pills">
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path_for('panel') }}">{{ 'back' | trans }}</a>
                    </li>
                </ul>
            </div>
            <div class="card-header card-header-2" id="tabs">
                <ul class="nav nav-pills card-header-pills" id="second-tab">
                    <li class="nav-item">
                        <a class="nav-link active" href="#tabs-1">{{ 'manage_product' | trans }}</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div id="tabs-1">
                    <h3>{{ 'manage_product' | trans }}</h3>
                    <div class="form-group mb-0 row">
                        <div class="col-12 mt-2">
                            <a class="btn btn-primary btn-block waves-effect waves-light"
                               type="submit" href="{{ path_for('panel.product.create') }}">{{ 'create_products' | trans }} <i
                                        class="fas fa-sign-in-alt ml-1"></i></a>
                        </div>
                    </div>
                    <table id="ccTable" class="table list-item padded"
                           style="color: #adb1bd; border-color: transparent">
                        <thead style="border-color: #adb1bd">
                        <tr class="padded">
                            <th>{{ 'name' | trans }}</th>
                            <th>{{ 'version' | trans }}</th>
                            <th>{{ 'group' | trans }}</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody style="border-radius: 12px">
                        {% for product in products %}
                            <tr class="list-item" style="height: 62px; margin: auto; background-color: #272636">
                                <td>{{ product.name }}</td>
                                <td>{{ product.version }}</td>
                                <td>{{ product.group.name }}</td>
                                <td>
                                    <div>
                                        <a onclick="deleteProduct({{ product.id }})"  id="{{ product.id }}"
                                           style="margin-left: 10px; color: #adb1bd; text-decoration: none; cursor: pointer">
                                            <i class="mdi mdi-delete ml-1 mdi-24px"></i>
                                        </a>
                                        <a href="{{ path_for('panel.product.edit', {id: product.id}) }}"
                                           style="margin-left: 10px; color: #adb1bd">
                                            <i class="mdi mdi-cog ml-1 mdi-24px"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#ccTable').DataTable({
                "bLengthChange": false,
                "pageLength": 5
            });
        });

        function deleteProduct(productID) {
            Swal.fire({
                title: '{{ 'warning' | trans }}',
                text: '{{ 'do_you_want_to_delete_this_product' | trans }}',
                icon: 'warning',
                confirmButtonText: 'Yes',
                cancelButtonText: 'No',
                showCancelButton: true,
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: "GET",
                        url: "{{ path_for('panel.product.delete', {id: null}) }}" + productID,
                        success: function () {
                            Swal.fire('{{ 'product_delete_success' | trans }}', '', 'success').then(() => {
                                $("#" + productID).parents().eq(2).remove();
                            });
                        }
                    });
                } else {
                    Swal.fire('{{ 'product_not_deleted' | trans }}', '', 'info')
                }
            });
        }
    </script>
{% endblock %}