{% extends 'app.twig' %}

{% block content %}

    {% if error %}
    <div class="alert alert-danger">{{ error }}
        <br> DM us on QQ for support!
    </div>
    <br>
    <br>
    {% endif %}

    <div class="container">
        <div class="card text-center">
            <div class="card-header">
                <ul class="nav nav-pills card-header-pills">
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path_for('panel.groups') }}">{{ "back" | trans }}</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                    <form action="{{ path_for('panel.reseller.users') }}" method="post">

                        <div class="input-group mb-2">
                            <h3>{{ "user_add" | trans }}</h3>
                        </div>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">{{"enter_username" | trans}}</div>
                            </div>
                            <label for="username"></label>
                            <input type="text" class="form-control" id="username" name="username"
                                   placeholder="Username">
                        </div>
                        <div class="form-group mb-0 row">
                            <div class="col-12 mt-2">
                                <button class="btn btn-primary btn-block waves-effect waves-light" name="login"
                                        type="submit">{{ "add"| trans }}<i class="fas fa-sign-in-alt ml-1"></i></button>
                            </div>
                        </div>

                        <br>
                        <h3>{{ "users_list" | trans }}</h3>
                        <table id="ccTable" class="table list-item padded"
                               style="color: #adb1bd; border-color: transparent; ">
                            <thead>
                            <tr class="links">
                                <th>{{'name' | trans }}</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user1 in users %}
                                <tr class="list-item" style="height: 62px; margin: auto; background-color: #272636">
                                    <td>{{ user1.name }}</td>
                                    <td>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </form>
              
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#ccTable').DataTable({
                "bLengthChange": false,
                "pageLength": 5
            });
        });
        $(document).ready(function () {
            $('#ccTable2').DataTable({
                "bLengthChange": false,
                "pageLength": 5
            });
        });
        initTabs('groups-admins-second-tab');
    </script>
{% endblock %}